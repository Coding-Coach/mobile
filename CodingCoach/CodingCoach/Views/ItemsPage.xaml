<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:abstractions="clr-namespace:ImageCircle.Forms.Plugin.Abstractions;assembly=ImageCircle.Forms.Plugin"
             x:Class="CodingCoach.Views.ItemsPage"
             Title="{Binding Title}"
             x:Name="BrowseItemsPage">

    <ContentPage.Resources>
        <StyleSheet Source="../Assets/styles.css" />
    </ContentPage.Resources>

    <!--<ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="AddItem_Clicked"/>
    </ContentPage.ToolbarItems>-->

    <StackLayout>
        <ListView
            HasUnevenRows="true"
            SeparatorVisibility="None"
            ItemsSource="{Binding Mentors}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame class="mentor-card">
                            <StackLayout
                                Orientation="Vertical">
                                <abstractions:CircleImage Source="{Binding Avatar}" BorderColor="Gray"
                                                          BorderThickness="1"
                                                          HeightRequest="90"
                                                          WidthRequest="90"
                                                          Aspect="AspectFill"
                                                          HorizontalOptions="Center" />
                                <Label Text="{Binding Name}"
                                       HorizontalOptions="Center"
                                       TextColor="Red" />
                                <Label Text="{Binding Title}"
                                       HorizontalOptions="Center"
                                       TextColor="#503026" />
                                <Label Text="{Binding Description}" StyleClass="mentor-description"
                                       HorizontalOptions="Center" />
                            </StackLayout>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>